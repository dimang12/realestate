@model RealEstate.ViewModels.ListingCreateViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb bg-transparent pl-0 pr-0 font-14">
                <li class="breadcrumb-item"><a href="#"> <i class="icon-cup mr-1"></i> Home</a></li>
                <li class="breadcrumb-item"><a href="#">Library</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add new listing</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12 border border-bottom pt-3 pb-2">
            <h5>Add New Listing</h5>
        </div>
        <div class="col-md-8 bg-white">
            <form class="mt-3" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <label for="txtAddress" class="col-md-2 col-form-label">Address: </label>
                    <div class="col-md-10">
                        <input asp-for="Address" name="Address" type="text" class="form-control" id="txtAddress" value="" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtPrice" class="col-sm-2 col-form-label">Price: </label>
                    <div class="col-sm-10">
                        <input asp-for="Price" name="Price" type="number" class="form-control" id="txtPrice" placeholder="Price in USD" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="col-md-2">Image(s) :</label>
                    <div class="col-md-10 ">
                        <div class="custom-file">
                            <input asp-for="Image" type="file" class="custom-file-input" id="validatedCustomFile" name="Image">
                            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                            <span asp-validation-for="Image" class="invalid-feedback">Example invalid custom file feedback</span>
                        </div>

                        
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Company" class="col-2 col-form-label">Company: </label>
                    <div class="col-10">
                        <input asp-for="Company" type="text" name="Company" class="form-control" />
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 text-right">
                        <button type="submit" class="btn btn-secondary rounded-pill"> Add Listing</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4 bg-light"></div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
          $('#validatedCustomFile').on('change', function() {
            var fileName = $(this).val().split('\\').pop();
            $(this).next('.custom-file-label').html(fileName);
          })
        })
    </script>
}
